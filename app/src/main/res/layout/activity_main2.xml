<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    tools:context="com.example.jhonny.webview.Main2Activity">



    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/container"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="MenÃº Estudiantes"
                            android:textAlignment="center"
                            android:layout_marginTop="30dp"
                            android:textColor="@color/titulos"/>

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:layout_marginTop="30dp"
                        android:adjustViewBounds="false"
                        android:src="@mipmap/logo"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.087" />

                    <Button
                            android:id="@+id/btn_q10"
                            android:background="@color/botonesAzules"
                            android:textColor="@color/textoBlanco"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="5dp"
                            android:text="Q10 NOTAS"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.181" />

                        <Button
                            android:id="@+id/btn_correo"
                            android:background="@color/botonesAzules"
                            android:textColor="@color/textoBlanco"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:layout_marginBottom="5dp"
                            android:text="Correo Institucional"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.377"
                            app:layout_constraintHorizontal_bias="0.504" />



                        <Button
                            android:id="@+id/btn_moodle"
                            android:background="@color/botonesAzules"
                            android:textColor="@color/textoBlanco"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:layout_marginBottom="5dp"
                            android:text="Moodle"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.574"
                            tools:layout_editor_absoluteY="265dp" />

                        <Button
                            android:id="@+id/btn_recibo"
                            android:background="@color/botonesAzules"
                            android:textColor="@color/textoBlanco"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:layout_marginBottom="5dp"
                            android:text="Recibo Matricula"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintHorizontal_bias="0.504"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.766"
                            tools:layout_editor_absoluteY="356dp" />

                    <Button
                        android:id="@+id/btnbiblioteca"
                        android:background="@color/botonesAzules"
                        android:textColor="@color/textoBlanco"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_marginBottom="5dp"
                        android:text="Biblioteca"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="0.504"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.766"
                        tools:layout_editor_absoluteY="356dp" />

                        <TextView
                            android:id="@+id/txtsedes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sedes Manizales"
                            android:textAlignment="center"
                            android:layout_marginTop="30dp"
                            android:textColor="@color/titulos"/>

                        <RadioGroup
                            android:id="@+id/radgsedes"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                                <RadioButton
                                    android:id="@+id/radiocentro"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Sede Centro" />

                            <RadioButton
                                android:id="@+id/radiocable"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sede Cable" />
                        </RadioGroup>

                        <Button
                            android:id="@+id/btnversede"
                            android:background="@color/botonesAzules"
                            android:textColor="@color/textoBlanco"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:layout_marginBottom="5dp"
                            android:text="Ver Sede"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintHorizontal_bias="0.504"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.766"
                            tools:layout_editor_absoluteY="356dp" />
                </LinearLayout>
        </ScrollView>
</LinearLayout>
